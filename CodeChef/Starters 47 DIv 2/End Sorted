}

/*
 Brute force applied here ....
*/

void solve()
{ 
   ll n ,a , b;
   cin>>n;

   vector<int>arr(n);
   for(int i=0;i<n;i++) {cin>>arr[i]; if(arr[i] == 1) a = i; if(arr[i] == n) b = i;}
   
   ll ans = 0;
  
   while(a)
   {
     if(a-1 == b) b = a;
     swap(arr[a] , arr[a-1]);
     ans++;
     a--;
   }

   while(b != n-1)
   {
     swap(arr[b] , arr[b+1]);
     ans++;
     b++;
   }
   
   cout<<ans<<endl;
  
}

int main()
{
  predefined();
  

  lli t;

  cin >> t;


 
  while (t--)
  solve();
}
