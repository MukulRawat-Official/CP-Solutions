/*

 except intial and final postion when we encounter 1 it will add 11
 ie 1 from 10's and 1's place ...
 so we'll check if we able to move first one and zero to first and last place
 first pos will decrease ans by 1 (think yourself why)
 last pos will decrease and by 10 (think yourself)

*/

void solve()
{
  int n , k;
  cin >> n >> k;
  string s;
  cin >> s;


  int i = 0 , j = n - 1;

  while (i < n && s[i] == '0')
    i++;

  while (j >= 0 && s[j] == '0')
    j--;

  debug(i);
  debug(j);


  ll sum = 0;

  for (int i = 0; i < n; i++)
  {
    if (s[i] & 1)
      sum++;
  }

  sum *= 11;

  if (!sum)
  {
    cout << 0 << endl;
    return;
  }

  int x = i , y = j;

  j = n - 1 - j;



  if (x != y && i + j <= k)
    sum -= 11;

  else if (j <= k)
    sum -= 10;

  else if (i <= k)
    sum--;

  cout << sum << endl;


}


int main()
{
  predefined();


  lli t;

  cin >> t;


  while (t--)
    solve();
}
