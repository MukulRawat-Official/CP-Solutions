ll max(ll a , ll b)
{
  if (a > b)
    return a;
  return b;
}
/*

i need to take n element and get m min elements from its
problem is simple we take n greatest elements and return m min element from it
but how to do its faster
well we can use prefix 
we can get min index of by taking n elements 
and can get m range of elements from current index to  curr + m - 1 index

*/

void solve()
{
  int n , q;
  cin >> n >> q;

  vector<int>arr(n);

  for (int i = 0; i < n; i++)
    cin >> arr[i];

  sort(arr.begin(), arr.end());


  vector<ll>p(n);

  p[0] = arr[0];

  for (int i = 1; i < n; i++)
    p[i] = p[i - 1] + arr[i];

  int a , b;
  while (q--)
  {
    cin >> a >> b;

    int idx = n - a ;
    ll sum = 0;

    int  l = idx;
    int r  = (idx + b - 1) >= n ? n - 1 : idx + b - 1;



    if (!l)
      sum = p[r];

    else
      sum = p[r] - p[l - 1];


    cout << sum << endl;
  }


}







int main()
{
  predefined();
  // sol();

  // lli t;

  // cin >> t;


  // while (t--)
  solve();
}
