/*
   it will be sure we need k length of black strip
   now if we know how many white strips are there in segment of length k
   (for this we will use prefix sum)
   we ans get our answer while traversing in array in segements of k length
*/




void solve()
{
  int n , k;

  cin >> n >> k;

  char ch;

  vector<int>arr(n);

  for (int i = 0; i < n; i++)
  {
    cin >> ch;

    if (ch == 'B')
      arr[i]  = 0;

    else
      arr[i] = 1;
  }

  vector<int>p (n) , s(n);

  p[0] = arr[0];

  for (int i = 1; i < n; i++)
    p[i] = p[i - 1] + arr[i];

  k--;

  debug(p);
  int ans = INT_MAX;
  for (int i = 0; i + k < n; i++)
  {
    int curr = 0;


    if (i == 0)
      curr =  p[i + k];

    else
      curr = p[i + k] - p[i - 1];

    ans = min(ans, curr);
  }

  cout << ans << endl;
}







int main()
{
  predefined();


  lli t;

  cin >> t;


  while (t--)
    solve();
}
