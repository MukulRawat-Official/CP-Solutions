/*
   take 3 no 
   
   and divide heigh equally among them no add remainder height in b
   
   now if r== 0
   
   therfore 
   
   a = b = c
   reduce c  by one and increase a by one 
   
   if r == 1
   terefore only a == c
   b - a == a
   
  increase b by one and redcuce c by one
  
  
  if r == 2
  
  increase a by one and decrease c by one

*/


void solve()
{
  ll n , a, b , c , r;
  cin >> n;

  a = b = c = n / 3;

  r = n % 3;

  b += r;

  if (b == c)
  {
    b++;
    c--;
  }

  else if ( a == c && b - 1 == a)
  {
    b++;
    c--;
  }

  else if (a == c)
  {
    a++;
    c--;
  }

  cout << a << " " << b << " " << c << endl;


}




int main()
{
  predefined();


  lli t = 0;
  cin >> t;

  while (t--)
    solve();
}
